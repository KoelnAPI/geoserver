<?xml version="1.0" encoding="utf-8"?>
<Map bgcolor="#f2efe9" srs="+proj=latlong +datum=WGS84">
	<!--<FontSet name="book-fonts">
		<Font face-name="DejaVu Sans Book" />
	</FontSet>-->
	<Style name="strassenabschnitte_style">
		<Rule>
			<Filter></Filter>
			<LineSymbolizer>
				<CssParameter name="stroke">#808080</CssParameter>
				<CssParameter name="stroke-width">2</CssParameter>
				<CssParameter name="stroke-linejoin">round</CssParameter>
				<CssParameter name="stroke-linecap">round</CssParameter>
			</LineSymbolizer>
		</Rule>
	</Style>
	<Layer name="strassenabschnitte" status="on" srs="+proj=latlong +datum=WGS84">
        <StyleName>strassenabschnitte_style</StyleName>
        <Datasource>
            <Parameter name="type">postgis</Parameter>
            <Parameter name="host">localhost</Parameter>
            <Parameter name="dbname">koelnapi</Parameter>
            <Parameter name="user">koelnapi</Parameter>      
            <Parameter name="password">koelnapi</Parameter>
            <Parameter name="table">(select the_geom as geometry, strasse as name from strassenabschnitte) as world</Parameter>
            <Parameter name="estimate_extent">false</Parameter>
            <Parameter name="extent">-180,-90,180,89.99</Parameter>
        </Datasource>
    </Layer>
</Map>